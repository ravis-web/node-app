<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/styles/prod.css">
<link rel="stylesheet" href="/styles/ecart.css">
<%- include('../includes/navb.ejs') %>
<%- include('../includes/users.ejs') %>

<main>
  <div class="centered">
    <h3>Cart Items</h3>
    <% if(products.length > 0) { %>
    <ul class="cart__item-list">
      <% products.forEach(product => { %>
      <li class="cart__item">
        <p><%= product.title %></p>
        <p><%= product.quantity %></p>
        <p>â‚¹ <%= product.quantity * product.price %>/-</p>
        <form action="/rem-item" method="post">
          <input type="hidden" name="prodId" value="<%= product._id %>">
          <button class="btn danger" type="submit">Remove</button>
        </form>
      </li>
      <% })%>
    </ul>
    <div class="centered">
      <form action="/new-order" method="post">
        <button type="submit" class="btn">Order Now</button>
        <a href="/shop" class="btn"> Add Items </a>
      </form>
    </div>
    <% } else { %>
    <div class="centered">
      <h5> No items here. </h5>
      <a href="/shop" class="btn"> Continue Shopping </a>
    </div>
    <% } %>
  </div>
</main>

<%- include('../includes/close.ejs') %>
