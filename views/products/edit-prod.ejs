<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/styles/prod.css">
<link rel="stylesheet" href="/styles/form.css">

<%- include('../includes/navb.ejs') %>
<%- include('../includes/users.ejs') %>

<main>
  <form class="product-form" action="/updt-prod" method="post">
    <h3><%= docTitle %></h3>
    <div class="form-control">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" autofocus value="<%= product.title %>" />
    </div>
    <div class="form-control">
      <label for="image">Image</label>
      <input type="text" name="image" id="image" value="<%= product.image %>" />
    </div>
    <div class="form-control">
      <label for="proce">Price</label>
      <input type="number" name="price" id="price" step="0.01" min="0.00" value="<%= product.price %>" />
    </div>
    <div class="form-control">
      <label for="desc">Description</label>
      <textarea name="desc" id="desc" rows="5"><%= product.desc %></textarea>
    </div>
    <input type="hidden" name="prodId" value="<%= product.id %>" />
    <button class="btn" type="submit">Update</button>
    <a href="/products" class="btn">Cancel</a>
  </form>
</main>

<%- include('../includes/close.ejs') %>
